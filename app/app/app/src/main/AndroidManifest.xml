<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Android 10+ full-screen intent -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <!-- Android 13+ notifications runtime permission (a usernek egyszer engedélyezni kell) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="false"
        android:label="Charging Screen"
        android:theme="@style/Theme.ChargingScreen">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />

        <!-- Fogadjuk, amikor töltőre kerül -->
        <receiver
            android:name=".ChargingReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
